<%# Subscribing the client to a channel%>
<%= turbo_stream_from @chat %>

  <%# Container %>
  <div class="bg-[#F2FFFB] rounded-t-2xl p-10 flex flex-grow flex-col">

  <%# Messages %>
  <div id ="messages" class="p-6 flex-1 overflow-auto">
    <%= render "messages/messages", messages: @chat.messages %>
  </div>

  <%# Chatbox  %>
  <div id="new_message_container" class="chat-area flex flex-col border rounded-xl m-2 p-2 bg-[#DDF8F0]">
     <%= render "messages/form", chat: @chat, message: @message %>
  </div>
</div>
