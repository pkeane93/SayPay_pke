<%# Container %>
<div class="bg-[#F2FFFB] rounded-t-2xl p-6 flex-grow">

  <div class="text-left">
    <h2 class="font-bold mb-5 text-3xl">Trips</h2>
  </div>

  <div id="cards" class="grid grid-cols-1 justify-items-center">
  <%if @trips.any?%>
    <%# Iterating through all the trips %>
    <%= link_to(new_trip_path, class: "flex justify-center border border-dashed shadow-md p-2 w-full mb-5 rounded-xl") do%>
      <i data-lucide="plus" class="w-10 h-10 border rounded-full text-white bg-[#21A179]"></i>
    <%end%>

    <%# Iteration through all the trips %>
    <% @trips.each do |trip| %>
      <%= link_to(new_trip_expense_path(trip), class: "border border-gray-200 shadow-md p-2 w-full mb-5 rounded-xl") do %>
        <figure>
          <%=image_tag(trip.url, class: "rounded-xl object-cover w-full h-52")%>
        </figure>
        <div class="flex py-2 justify-around">
          <h2 class="object-top font-semibold"><%=trip.country%></h2>
          <div class="text-right italic">
            <p>from: <%= trip.start_date.strftime("%d-%m-%y") if trip.start_date %></p>
            <p>to: <%= trip.end_date.strftime("%d-%m-%y") if trip.end_date %></p>
          </div>
        </div>
      <%end%>
    <%end%>

  <%else%>
  <%# Button that redirects to the new trip page %>
    <%= link_to(new_trip_path, class: "shadow-md p-2 w-64 mb-5 rounded-xl bg-[#DDF8F0]") do%>
      <div class="flex justify-center p-5 border border-dashed rounded-xl">
        <i data-lucide="plus" class="w-10 h-10 border rounded-full text-white bg-[#21A179]"></i>
      </div>
      <p>- Create a trip</p>
      <p>- Track your expenses!</p>
    <%end%>
  <%end%>
  </div>

</div>
